algoritmo "Creuza01"
var
   ano_atual,ano_nasc,idade:real
   nome: caracter
inicio
      escreva("Qual é seu nome?:")
      leia(nome)
      escreva("Em que ano nos estamos?:")
      leia(ano_atual)
      escreval(ano_atual = 2024)
      escreva("Em que ano voce nasceu?:")
      leia(ano_nasc)
      limpatela
      escreva(nome," sua idade é ",ano_atual-ano_nasc)
fimalgoritmo